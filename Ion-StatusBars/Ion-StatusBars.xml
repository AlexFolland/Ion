	<Button name="IonStatusBarTemplate" frameStrata="LOW" virtual="true">
		<Size x="195" y="16"/>
		<Frames>
			<StatusBar name="$parentSB">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="1" y="-3"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-1" y="3"/>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture setAllPoints="true">
							<Color r="0" g="0" b="0" a="1"/>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<Texture name="$parentBarIcon" parentKey="icon" hidden="true">
							<Size x="14" y="14"/>
							<Anchors>
								<Anchor point="RIGHT" relativeTo="$parent" relativePoint="LEFT">
									<Offset x="-5" y="0"/>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString name="$parentCenterText" parentKey="cText" justifyH="CENTER" inherits="GameFontHighlightSmall">
							<Anchors>
								<Anchor point="CENTER">
									<Offset x="0" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentLeftText" parentKey="lText" justifyH="LEFT" inherits="GameFontHighlightSmall">
							<Anchors>
								<Anchor point="LEFT">
									<Offset x="3" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentRightText" parentKey="rText" justifyH="RIGHT" inherits="GameFontHighlightSmall">
							<Anchors>
								<Anchor point="RIGHT">
									<Offset x="-3" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentMouseoverText" parentKey="mText" justifyH="CENTER" inherits="GameFontHighlightSmall" hidden="true">
							<Anchors>
								<Anchor point="CENTER">
									<Offset x="0" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
						<Texture name="$parentSpark" parentKey="spark" file="Interface\AddOns\Ion-StatusBars\Images\CastingBar_Spark_1" alphaMode="ADD" hidden="true">
							<Size x="32" y="32"/>
							<Anchors>
								<Anchor point="CENTER">
									<Offset x="0" y="0"/>
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Frame name="$parentBackground" parentKey="bg">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="-3" y="3"/>
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="3" y="-3"/>
							</Anchor>
						</Anchors>
						<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
							<EdgeSize>
								<AbsValue val="12"/>
							</EdgeSize>
							<BackgroundInsets>
								<AbsInset left="3" right="3" top="3" bottom="3"/>
							</BackgroundInsets>
						</Backdrop>
						<Scripts>
							<OnLoad>
								self:SetBackdropColor(0, 0, 0, 0.8)
								self:SetBackdropBorderColor(0.8,0.8,0.8,0)
								self:SetFrameLevel(0)
							</OnLoad>
						</Scripts>
					</Frame>
					<Frame name="$parentBorder" parentKey="border">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="-2" y="3"/>
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="2" y="-3"/>
							</Anchor>
						</Anchors>
						<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
							<EdgeSize>
								<AbsValue val="12"/>
							</EdgeSize>
							<BackgroundInsets>
								<AbsInset left="3" right="3" top="3" bottom="3"/>
							</BackgroundInsets>
						</Backdrop>
						<Scripts>
							<OnLoad>
								self:SetBackdropColor(0, 0, 0, 0)
								self:SetBackdropBorderColor(0.8,0.8,0.8,0)
								self:SetFrameLevel(10)
							</OnLoad>
						</Scripts>
					</Frame>
					<Frame name="$parentBarFlash" parentKey="barflash" hidden="true">
						<Backdrop name="$parentBackdrop" bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
							<EdgeSize>
								<AbsValue val="15"/>
							</EdgeSize>
							<BackgroundInsets>
								<AbsInset left="2" right="2" top="2" bottom="2"/>
							</BackgroundInsets>
						</Backdrop>
						<Scripts>
							<OnLoad>
								self:SetBackdropColor(1, 1, 1, 0.5)
								self:SetBackdropBorderColor(1, 1, 1)
								self:SetFrameLevel(3)
							</OnLoad>
						</Scripts>
					</Frame>
					<Frame name="$parentCBTimer" parentKey="cbtimer"/>
				</Frames>
				<Scripts>
					<OnLoad>
						self:SetFrameLevel(1)
						self.barflash:SetAllPoints(self.border)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0.75" g="0" b="0.75"/>
			</StatusBar>
			<Frame name="$parentDropDown" parentKey="dropdown" inherits="UIDropDownMenuTemplate" id="1" hidden="true">
				<Size x="10" y="10"/>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent" relativePoint="RIGHT">
						<Offset x="3" y="0"/>
					</Anchor>
				</Anchors>
			</Frame>
			<CheckButton name="$parentEditFrame" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="0" y="0"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
				<Frames>
					<StatusBar name="$parentFeedback" parentKey="feedback">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="1" y="-3"/>
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="-1" y="3"/>
							</Anchor>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<FontString name="$parentText" parentKey="text" inherits="ChatFontSmall" justifyH="CENTER" justifyV="CENTER" nonspacewrap="true">
									<Anchors>
										<Anchor point="TOP">
											<Offset x="0" y="-1"/>
										</Anchor>
										<Anchor point="BOTTOM">
											<Offset x="0" y="3"/>
										</Anchor>
									</Anchors>
									<Shadow>
										<Offset x="1" y="-1"/>
										<Color r="0" g="0" b="0"/>
									</Shadow>
									<Color r="1" g="1" b="1"/>
								</FontString>
							</Layer>
						</Layers>
						<Frames>
							<Frame name="$parentBackground" parentKey="bg">
								<Anchors>
									<Anchor point="TOPLEFT">
										<Offset x="-3" y="3"/>
									</Anchor>
									<Anchor point="BOTTOMRIGHT">
										<Offset x="3" y="-3"/>
									</Anchor>
								</Anchors>
								<Backdrop bgFile="Interface\FriendsFrame\UI-Toast-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
									<EdgeSize>
										<AbsValue val="12"/>
									</EdgeSize>
									<BackgroundInsets>
										<AbsInset left="3" right="3" top="3" bottom="3"/>
									</BackgroundInsets>
								</Backdrop>
								<Scripts>
									<OnLoad>
										self:SetBackdropColor(0, 0, 0, 1)
										self:SetBackdropBorderColor(0.8,0.8,0.8,0)
										self:SetFrameLevel(0)
									</OnLoad>
								</Scripts>
							</Frame>
							<Frame name="$parentBorder" parentKey="border">
								<Anchors>
									<Anchor point="TOPLEFT">
										<Offset x="-2" y="3"/>
									</Anchor>
									<Anchor point="BOTTOMRIGHT">
										<Offset x="2" y="-3"/>
									</Anchor>
								</Anchors>
								<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
									<EdgeSize>
										<AbsValue val="12"/>
									</EdgeSize>
									<BackgroundInsets>
										<AbsInset left="3" right="3" top="3" bottom="3"/>
									</BackgroundInsets>
								</Backdrop>
								<Scripts>
									<OnLoad>
										self:SetBackdropColor(0, 0, 0, 0)
										self:SetBackdropBorderColor(0.8,0.8,0.8,0)
										self:SetFrameLevel(10)
									</OnLoad>
								</Scripts>
							</Frame>
						</Frames>
						<Scripts>
							<OnLoad>
								self:SetFrameLevel(1)
							</OnLoad>
						</Scripts>
						<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
						<BarColor r="0.3" g="0.3" b="0.3"/>
					</StatusBar>
				</Frames>
				<Scripts>
					<OnShow>
						self.feedback:SetStatusBarColor(self:GetParent().sb:GetStatusBarColor())
					</OnShow>
				</Scripts>
			</CheckButton>
			<Frame name="$parentPopUp" parentKey="popup" frameStrata="DIALOG" toplevel="true" clampedToScreen="true">
				<Anchors>
					<Anchor point="CENTER">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
				<Backdrop name="$parentBackdrop" bgFile="Interface\ItemTextFrame\ItemText-Stone-TopLeft" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="18"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="8"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="3" right="3" top="2" bottom="2"/>
					</BackgroundInsets>
				</Backdrop>
				<Scripts>
					<OnLoad>
						self.timer = 0
						self.options = {}
						self:RegisterEvent("ADDON_LOADED")
						self:SetBackdropColor(0, 0, 0)
						self:SetBackdropBorderColor(0.5, 0.5, 0.5)
						self:Hide()
					</OnLoad>
					<OnShow>
						self.timer = 0
					</OnShow>
					<OnUpdate>
						self.timer = self.timer + elapsed
						if (self:IsVisible() and self.timer > 5) then
							if (not self:IsMouseOver()) then
								self:Hide()
							end
						end
					</OnUpdate>
				</Scripts>
			</Frame>
			<EditBox name="$parentPopUpEdit" parentKey="popupedit" historyLines="0" numeric="false" autoFocus="false" nonspacewrap="true">
				<Anchors>
					<Anchor point="CENTER">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEditFocusGained>
						self:ClearFocus()
					</OnEditFocusGained>
					<OnTextChanged>

					</OnTextChanged>
				</Scripts>
			</EditBox>
		</Frames>
	</Button>
</Ui>
